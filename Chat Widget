<script type="text/javascript">
(function() {
    // Deteta o idioma através da URL ou do atributo lang
    var url = window.location.href;
    var widgetId = 'ZBNyv43FWa'; // Default PT

    // Se a URL contiver /en ou o parâmetro de língua for inglês
    if (url.indexOf('/en') > -1 || url.indexOf('lang=en') > -1) {
        widgetId = 'rGaz7crB7d'; // ID do Widget Inglês
    }

    var s = document.createElement('script');
    s.type = 'text/javascript';
    s.async = true;
    s.src = '//code.jivosite.com/widget/' + widgetId;
    var ss = document.getElementsByTagName('script')[0];
    ss.parentNode.insertBefore(s, ss);
})();
</script>
